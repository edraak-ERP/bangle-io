{
  "name": "bangle-io",
  "version": "1.0.0--alpha.0",
  "authors": [
    {
      "name": "Kushan Joshi",
      "email": "0o3ko0@gmail.com",
      "web": "http://github.com/kepta"
    }
  ],
  "bugs": "https://github.com/bangle-io/bangle-io/issues",
  "devDependencies": {
    "@bangle.io/e2e-types": "workspace:*",
    "@bangle.io/jsdom-env": "workspace:*",
    "@bangle.io/plop-configs": "workspace:*",
    "@bangle.io/shared-types": "workspace:*",
    "@eslint/js": "^8.56.0",
    "@swc/jest": "^0.2.36",
    "@types/eslint": "^8.56.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/wicg-file-system-access": "^2023.10.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bangle-io-help": "^1.11.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "globals": "^13.24.0",
    "jest": "^29.7.0",
    "plop": "^4.0.1",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "homepage": "https://bangle.io",
  "license": "AGPL-3.0-or-later",
  "pnpm": {
    "overrides": {}
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always",
    "printWidth": 80
  },
  "private": true,
  "scripts": {
    "build": "pnpm run generate-all && pnpm -r --filter \"app-root\" run build",
    "build-prod-serve": "pnpm run generate-all && pnpm -r --filter \"app-root\" run build-prod-serve",
    "generate-all": "pnpm run -r --aggregate-output \"/^generate:.*/\"",
    "generate-all-verbose": "pnpm run -r --stream \"/^generate:.*/\"",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:js": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "lint:type": "tsc -b",
    "start": "pnpm run generate-all && pnpm -r --filter \"app-root\" run start",
    "storybook": "pnpm -r --filter \"storybook\" run storybook",
    "test": "pnpm jest && pnpm run test:constraints",
    "test:ci": "pnpm jest --maxWorkers=2",
    "test:constraints": "pnpm run -r  --stream \"/^cscript:.*/\"",
    "test:e2e": "pnpm -r --filter e2e-tests e2e",
    "test:e2e-ui": "pnpm -r --filter e2e-tests e2e --ui"
  }
}
